{{ 'quick-order-list.css' | asset_url | stylesheet_tag }}

<script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>

<div class="universal-banner">
  <div class="banner-content" style="text-align: {{ section.settings.horizontal_alignment }};">
    <h1 style="font-size: {{ section.settings.title_size }}px; font-weight: {{ section.settings.title_weight }}; color: {{ section.settings.title_color }};">
      {{ section.settings.title }}
    </h1>
    <a href="{{ section.settings.button_link }}" class="button" style="background-color: {{ section.settings.button_background_color }}; color: {{ section.settings.button_text_color }};">
      {{ section.settings.button_text }}
    </a>
  </div>
  {%- if section.settings.desktop_image != blank or section.settings.mobile_image != blank -%}
    {%- if section.settings.desktop_image != blank -%}
      {{ section.settings.desktop_image | image_url: height: section.settings.max_height | image_tag: loading: 'lazy', class: 'desktop-image zoom-image' }}
    {%- endif -%}
    {%- if section.settings.mobile_image != blank -%}
      {{ section.settings.mobile_image | image_url: height: section.settings.max_height | image_tag: loading: 'lazy', class: 'mobile-image zoom-image' }}
    {%- endif -%}
  {%- else -%}
    {{ 'image' | placeholder_svg_tag: 'zoom-image placeholder' }}
  {%- endif -%}
</div>

<style>
  .universal-banner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .banner-content {
    text-align: center;
    width: calc(100% - {{ section.settings.max_height }}px);
  }
  .desktop-image {
    display: block;
  }
  .mobile-image {
    display: none;
  }
  @media (max-width: 768px) {
    .banner-content {
      width: 100%;
    }
    .universal-banner {
      flex-wrap: wrap;
    }
    .desktop-image {
      display: none;
    }
    .mobile-image {
      display: block;
    }
    .zoom-image {
      width: 100%;
      object-fit: cover;
      overflow: hidden;
    }
  }
</style>

{% schema %}
{
  "name": "Universal Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "range",
      "id": "max_height",
      "label": "Max Height",
      "min": 100,
      "max": 1000,
      "step": 10,
      "default": 500
    },
    {
      "type": "select",
      "id": "horizontal_alignment",
      "label": "Horizontal Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title Size",
      "min": 12,
      "max": 72,
      "step": 1,
      "default": 24
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Title Weight",
      "options": [
        { "value": "normal", "label": "Normal" },
        { "value": "bold", "label": "Bold" }
      ],
      "default": "normal"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Background Color"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color"
    }
  ],
  "presets": [
    {
      "name": "Universal Banner"
    }
  ]
}
{% endschema %}